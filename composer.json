{
  "name": "hiqdev/rdap-server",
  "type": "project",
  "description": "Rdap Server",
  "keywords": [
    "rdap",
    "server"
  ],
  "require": {
    "ext-json": "*",
    "ext-pdo": "*",
    "monolog/monolog": "^1.24",
    "php": ">=7.1",
    "php-di/php-di": "^6.0",
    "slim/psr7": "^0.5",
    "slim/slim": "^4.1",
    "vlucas/phpdotenv": "^3.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "App\\migrations\\": "migrations/",
      "tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": "php -S localhost:8080 -t public public/index.php",
    "test": "./vendor/bin/phpunit tests"
  }
}
